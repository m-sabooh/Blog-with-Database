
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
        <%=post.content.substring(0, 100) + " ..."%>
        <a href="/posts/<%=post._id%>">Read More</a>
        <form method="post" action="/delete"><button name="deletePost" value="<%=post._id%>">Delete Post</button></form>
    </p>


    <% }) %>


<%- include("partials/footer"); -%>
